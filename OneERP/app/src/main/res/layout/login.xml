<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user_name"
        android:id="@+id/textViewUserName"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/password"
        android:id="@+id/textViewPassword"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserName"
        android:inputType="textNoSuggestions"
        android:layout_toRightOf="@+id/textViewUserName"
        android:layout_toEndOf="@+id/textViewUserName"
        android:layout_above="@+id/textViewPassword"
        android:selectAllOnFocus="true"
        android:textSize="22sp"
        android:singleLine="true"
        android:paddingLeft="16dp"
        android:gravity="bottom"
        android:paddingBottom="6dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_alignBottom="@+id/textViewPassword"
        android:layout_toRightOf="@+id/textViewPassword"
        android:layout_toEndOf="@+id/textViewPassword"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:singleLine="true"
        android:paddingLeft="16dp"
        android:gravity="bottom"
        android:paddingBottom="6dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveUserName"
        android:id="@+id/checkBoxSaveUserName"
        android:layout_marginTop="30dp"
        android:checked="true"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/checkBoxSaveUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

</RelativeLayout>